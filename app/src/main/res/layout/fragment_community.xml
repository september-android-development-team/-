<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".View.Fragment.CommunityFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:background="@color/primary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/primary"
                android:gravity="center"
                android:text="消息"
                android:textColor="#000000"
                android:textSize="20sp"/>
            <ImageButton
                android:id="@+id/to_AddMore"
                android:background="@color/primary"
                android:src="@drawable/add_people"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                />
        </LinearLayout>

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#fff"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#99777575"
                />

            <LinearLayout
                android:id="@+id/To_Contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/ic_address_book"
                    />
                <LinearLayout

                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#000"
                        android:text="通讯录"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:padding="10dp"
                        android:background="#99777575"

                        />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/To_Schedule"
                >

                <ImageView
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/ic_calendar"
                    />
                <LinearLayout

                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#000"
                        android:text="日程安排"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:padding="10dp"
                        android:background="#99777575"

                        />

                </LinearLayout>


            </LinearLayout>  <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:src="@drawable/ic_envelope"
                />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000"
                    android:text="收件箱"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:padding="10dp"
                    android:background="#99777575"

                    />

            </LinearLayout>

        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/ic_call_back"
                    />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#000"
                        android:text="回复我的"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:padding="10dp"
                        android:background="#99777575"

                        />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>